include ../../components/newsCard/newsCard
include ../../components/paginator/paginator

section.news
  .container
    h2.title.news__title Новости и акции
    ul.news__list
      each card in newsCards
        li.news__item
          +newsCard(card.src, card.srcRetina, card.alt, card.date, card.title, card.description)
    +paginator(7, 1, 'color--theme--white')