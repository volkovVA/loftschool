.socials {
    display: flex;
    
    @include tablets {
        padding-left: 270px;
    }

    &--footer {
        @include tablets {
            padding-left: 5px;
        }
    }

    &__item {
        margin-right: 15px;
        &:last-child {
            margin-right: 0;
        }

        &:hover {
            .socials__icon {
                fill: $content-color;
            }
        }
    }

    &__item--footer {
        margin-right: 20px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 1px solid $grey-color;
        transition: border-color $trans-hover; 
        
        &:hover {
            border-color: $content-color;

            .socials__icon {
                fill: $content-color;
            }
        }
    }

    &__icon {
        width: 23px;
        height: 23px;
        fill: $grey-color;
        transition: fill $trans-hover; 
    }
    
    &__link {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 12px;
    }
}